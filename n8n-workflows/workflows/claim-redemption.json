    {
      "parameters": {
        "functionCode": "// Parse and normalize phone number\nconst message = $json.entry[0].changes[0].value.messages[0];\nconst phone = message.from;\n\n// Normalize phone to E.164 format\nlet normalized = phone.replace(/\\D/g, '');\n\nif (!normalized.startsWith('+')) {\n  if (normalized.startsWith('0')) {\n    normalized = '+90' + normalized.substring(1);\n  } else if (normalized.length === 10) {\n    normalized = '+90' + normalized;\n  } else {\n    normalized = '+' + normalized;\n  }\n}\n\nreturn {\n  phone: normalized\n};"
      },
      "id": "parse-phone",
      "name": "Parse Phone",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        850,
        300
      ]
    },
    {
      "parameters": {
        "functionCode": "// Check deduplication cache (5min TTL)\nconst phone = $json.phone;\nconst cacheKey = `claim:${phone}`;\n\n// Use workflow static data for in-memory cache\nconst cache = $workflow.staticData.cache || {};\nconst now = Date.now();\nconst ttl = 300000; // 5 minutes\n\n// Clean expired entries\nObject.keys(cache).forEach(key => {\n  if (cache[key].expires < now) {\n    delete cache[key];\n  }\n});\n\n// Check if duplicate\nif (cache[cacheKey] && cache[cacheKey].expires > now) {\n  return {\n    isDuplicate: true,\n    cachedRedemptionId: cache[cacheKey].redemptionId,\n    phone: phone\n  };\n}\n\n// Not a duplicate, will cache after API call\n$workflow.staticData.cache = cache;\n\nreturn {\n  isDuplicate: false,\n  phone: phone,\n  cacheKey: cacheKey\n};"
      },
      "id": "check-dedup",
      "name": "Check Deduplication",
