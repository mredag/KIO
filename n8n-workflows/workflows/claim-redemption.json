    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{$json.entry[0].changes[0].value.messages[0].text.body.toLowerCase()}}",
              "operation": "equals",
              "value2": "kupon kullan"
            }
          ]
        }
      },
      "id": "filter-claim",
      "name": "Filter 'kupon kullan'",
